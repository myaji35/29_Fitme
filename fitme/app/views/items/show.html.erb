<div class="item-detail">
  <h1>아이템 상세</h1>

  <div class="item-content">
    <% if @item.image.attached? %>
      <%= image_tag @item.image, alt: @item.category, class: "item-image-large" %>
    <% else %>
      <div class="placeholder-large">No Image</div>
    <% end %>

    <div class="item-details">
      <h2><%= @item.category&.capitalize %></h2>

      <dl>
        <dt>색상:</dt>
        <dd><%= @item.color || "미지정" %></dd>

        <dt>계절:</dt>
        <dd><%= @item.season&.capitalize || "미지정" %></dd>

        <dt>등록일:</dt>
        <dd><%= @item.created_at.strftime("%Y-%m-%d") %></dd>
      </dl>

      <% if @item.meta_data.present? %>
        <h3>AI 분석 결과</h3>
        <pre><%= JSON.pretty_generate(@item.meta_data) %></pre>
      <% end %>

      <div class="actions">
        <%= link_to "수정", edit_item_path(@item), class: "btn btn-primary" %>
        <%= button_to "삭제", item_path(@item), method: :delete, data: { confirm: "정말 삭제하시겠습니까?" }, class: "btn btn-danger" %>
        <%= link_to "목록으로", items_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
